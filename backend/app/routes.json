[
  {
    "method": "get",
    "path": "/",
    "handler": "controllers/home.js"
  },  
  {
    "method": "get",
    "path": "/articles/:artId",
    "handler": "controllers/articleDetails.js",
    "validate": [{
        "param": "artId",
        "type": "path",
        "validators": [
            "notEmpty",
            "isInt"
        ]
    }]
  },
  {
    "method": "get",
    "path": "/users",
    "handler": "controllers/users.js"
  },
  {
    "method": "get",
    "path": "/users/:userId",
    "handler": "controllers/userDetails.js",
    "validate": [{
        "param": "userId",
        "type": "path",
        "validators": [
            "notEmpty",
            "isString"
        ]
    }]
  },
  {
    "method": "put",
    "path": "/user/register",
    "handler": "controllers/registerUser.js",
    "validate": [{
        "param": "username",
        "type": "body",
        "validators": [
            "notEmpty",
            "isString"
        ]
    },
    {
        "param": "password",
        "type": "body",
        "validators": [
            "notEmpty",
            "isString"
        ]
    },
    {
        "param": "name",
        "type": "body",
        "validators": [
        ]
    },
    {
        "param": "createdAt",
        "type": "body",
        "validators": [
            "notEmpty"
        ]
    },
    {
        "param": "email",
        "type": "body",
        "validators": [
            "notEmpty",
            "isEmail"
        ]
    }]
  },
  {
    "method": "put",
    "path": "/user/login",
    "handler": "controllers/loginUser.js",
    "validate": [{
        "param": "username",
        "type": "body",
        "validators": [
            "notEmpty",
            "isString"
        ]
    },
    {
        "param": "password",
        "type": "body",
        "validators": [
            "notEmpty",
            "isString"
        ]
    }]
  },
  {
    "method": "put",
    "path": "/article/post",
    "handler": "controllers/saveArticlesCtrl.js",
    "validate": [{
        "param": "title",
        "type": "body",
        "validators": [
            "notEmpty",
            "isString"
        ]
    },
    {
        "param": "author",
        "type": "body",
        "validators": [
            "notEmpty",
            "isString"
        ]
    },
    {
        "param": "body",
        "type": "body",
        "validators": [
          "notEmpty"
        ]
    },
    {
        "param": "categories",
        "type": "body",
        "validators": [
            "notEmpty"
        ]
    }]
  },
  {
    "method": "get",
    "path": "/article/post",
    "handler": "controllers/getArticlesCtrl.js"
  },
  {
    "method": "get",
    "path": "/article/categories",
    "handler": "controllers/categoriesCtrl.js"
  },
  {
    "method": "put",
    "path": "/article/categories",
    "handler": "controllers/updateCategoriesCtrl.js",
    "validate": [{
        "param": "title",
        "type": "body",
        "validators": [
            "notEmpty",
            "isString"
        ]
    }]
  }
]
